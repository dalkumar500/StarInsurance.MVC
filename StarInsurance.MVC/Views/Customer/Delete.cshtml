@model StarInsurance.Models.CustomerDetail

@{
    ViewBag.Title = "Delete";
}

@if (User.Identity.IsAuthenticated)
{

    <h2 class="text-center mt-4">Are you sure you want to delete this?</h2>
    <hr />
    <div class="d-flex justify-content-center text-center">
        <div class="card bg-dark text-center w-25">
            <div class="card-header font-weight-bold">
                @Html.DisplayNameFor(model => model.FullName)
            </div>
            <div class="card-body">
                @Html.DisplayFor(model => model.FullName)
            </div>
            <div class="card-header font-weight-bold">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </div>
            <div class="card-body">
                @Html.DisplayFor(model => model.PhoneNumber)
            </div>
            <div class="card-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
                    </div>
                }
            </div>
        </div>
    </div>

}
else
{
    <h3 class="text-center">Please sign in to delete this category</h3>
}

