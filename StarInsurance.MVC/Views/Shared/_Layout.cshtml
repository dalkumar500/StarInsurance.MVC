<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Star Insurance </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="text-white">
    <div class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            @Html.ActionLink("Star Insurance", "Index", "Home", new { area = "" }, htmlAttributes: new { @class = "navbar-brand" })
  <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-expanded="true">
                <span class="navbar-toggler-icon"></span>
  </button>

            <div class="navbar-collapse collapse">
                <ul class="navbar-nav list-inline mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, htmlAttributes: new { @class = "nav-link" })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("InsurancePolicies", "Index", "InsurancePolicy", null, htmlAttributes: new { @class = "nav-link" })</li>

                        <li class="nav-item">@Html.ActionLink("Customers", "Index", "Customer", null, htmlAttributes: new { @class = "nav-link" })</li>

                        <li class="nav-item">@Html.ActionLink("Claims", "Index", "Claim", null, htmlAttributes: new { @class = "nav-link" })</li>
                    }
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />

    </div>
    <footer class="text-center">
        <p>&copy; @DateTime.Now.Year - Star Insurance </p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
